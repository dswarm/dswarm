		<version.mysql-connector-java>5.1.34</version.mysql-connector-java>
		<version.eclipselink>2.6.0-RC2</version.eclipselink>
	</properties>

	<repositories>
		<repository>
			<id>googlecode.lambdaj</id>
			<name>Internal Release Repository</name>
			<url>https://lambdaj.googlecode.com/svn/repo/releases</url>
		</repository>
		<repository>
			<id>neo4jRepo</id>
			<url>http://m2.neo4j.org</url>
		</repository>
	</repositories>

	<build>
		<plugins>
			<plugin>
				<groupId>de.juplo</groupId>
				<artifactId>hibernate4-maven-plugin</artifactId>
				<version>${version.maven.plugin.hibernate}</version>
				<!-- <executions> <execution> <goals> <goal>export</goal> </goals> </execution>
					</executions> -->
				<configuration>
					<hibernateProperties>${project.build.directory}/test-classes/hibernate.hbm2ddl.properties</hibernateProperties>
					<target>SCRIPT</target>
				</configuration>
				<dependencies>
					<dependency>
						<groupId>mysql</groupId>
						<artifactId>mysql-connector-java</artifactId>
						<version>${version.mysql-connector-java}</version>
					</dependency>
				</dependencies>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-jar-plugin</artifactId>
				<executions>
					<execution>
						<goals>
							<goal>test-jar</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>de.empulse.eclipselink</groupId>
				<artifactId>staticweave-maven-plugin</artifactId>
				<version>1.0.0</version>
				<executions>
					<execution>
						<phase>process-classes</phase>
						<goals>
							<goal>weave</goal>
						</goals>
						<configuration>
							<persistenceXMLLocation>META-INF/persistence.xml</persistenceXMLLocation>
							<logLevel>FINE</logLevel>
						</configuration>
					</execution>
				</executions>
				<dependencies>
					<dependency>
						<groupId>org.eclipse.persistence</groupId>
						<artifactId>org.eclipse.persistence.jpa</artifactId>
						<version>${version.eclipselink}</version>
					</dependency>
				</dependencies>
			</plugin>
		</plugins>
	</build>

