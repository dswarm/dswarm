<project
		xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
		xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>org.dswarm</groupId>
		<artifactId>dswarm-parent</artifactId>
		<version>0.1-SNAPSHOT</version>
	</parent>
	<artifactId>dswarm-controller</artifactId>
	<version>0.1-SNAPSHOT</version>
	<packaging>war</packaging>
	<name>d:swarm - Controller</name>
	<url>http://dswarm.org/</url>

	<properties>
		<version.es-metrics-reporter>2.0</version.es-metrics-reporter>
		<version.grizzly-http>2.3.8</version.grizzly-http>
		<version.h2k>2.2.0</version.h2k>
		<version.javax.servlet-api>3.1.0</version.javax.servlet-api>
		<version.jcl-over-slf4j>1.7.10</version.jcl-over-slf4j>
		<version.jena>2.12.1</version.jena>
		<version.maven.plugin.jetty>9.2.6.v20141205</version.maven.plugin.jetty>
		<version.maven.plugin.tomcat>2.2</version.maven.plugin.tomcat>
	</properties>

	<build>
		<plugins>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>exec-maven-plugin</artifactId>
				<version>${version.maven.plugin.exec}</version>
				<executions>
					<execution>
						<goals>
							<goal>java</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<executable>java</executable>
					<arguments>
						<argument>-Xms6g</argument>
						<argument>-Xmx6g</argument>
						<argument>-Dconfig.file=${project.basedir}/../dswarm.conf</argument>
						<!--argument>-agentpath:/home/phorn/yjp-2015-eap-build-15026/bin/linux-x86-64/libyjpagent.so</argument-->
						<argument>-classpath</argument>
						<classpath/>
						<argument>org.dswarm.controller.Main</argument>
					</arguments>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-jar-plugin</artifactId>
				<configuration>
					<archive>
						<manifest>
							<mainClass>org.dswarm.controller.Main</mainClass>
						</manifest>
					</archive>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.eclipse.jetty</groupId>
				<artifactId>jetty-maven-plugin</artifactId>
				<version>${version.maven.plugin.jetty}</version>
				<configuration>
					<httpConnector>
						<port>8086</port>
					</httpConnector>
					<webApp>
						<contextPath>/dmp</contextPath>
					</webApp>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.tomcat.maven</groupId>
				<artifactId>tomcat7-maven-plugin</artifactId>
				<version>${version.maven.plugin.tomcat}</version>
				<configuration>
					<port>8087</port>
					<path>/dmp</path>
					<protocol>org.apache.coyote.http11.Http11NioProtocol</protocol>
				</configuration>
				<executions>
					<execution>
						<id>tomcat-run</id>
						<goals>
							<goal>exec-war-only</goal>
						</goals>
						<phase>package</phase>
						<configuration>
							<!-- optional, needed only if you want to use a preconfigured server.xml
								file -->
							<!--<serverXml>src/main/tomcatconf/server.xml</serverXml> -->
							<!-- optional values which can be configurable -->
							<!--<attachArtifactClassifier>default value is exec-war but you can
								customize</attachArtifactClassifier> -->
							<!--<attachArtifactClassifierType>default value is jar</attachArtifactClassifierType> -->
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-assembly-plugin</artifactId>
				<configuration>
					<archive>
						<manifest>
							<mainClass>org.dswarm.controller.Main</mainClass>
						</manifest>
					</archive>
					<descriptorRefs>
						<descriptorRef>jar-with-dependencies</descriptorRef>
					</descriptorRefs>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-war-plugin</artifactId>
				<version>${version.maven.plugin.war}</version>
				<configuration>
					<failOnMissingWebXml>false</failOnMissingWebXml>
					<webResources>
						<resource>
							<directory>src/docs/ui</directory>
						</resource>
					</webResources>
				</configuration>
			</plugin>
		</plugins>
	</build>

